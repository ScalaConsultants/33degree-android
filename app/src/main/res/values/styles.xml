<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar"></style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowBackground">@color/window_background</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="ToolbarTitleStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="talks_topic_style">
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/primary_text_90</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="talks_speakers_style">
        <item name="android:textColor">@color/primary_text_45</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="talks_time_style">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@color/primary_text_45</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ScheduleImageButtonStyle">
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:contentDescription">@null</item>
        <item name="android:src">@drawable/ic_star</item>
        <item name="android:tint">@color/scheduled_not_star_color</item>
    </style>

    <style name="tabButtonStyle">
        <item name="android:background">@drawable/tab_button_background</item>
        <item name="android:fontFamily">@string/font_fontFamily_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/tab_text_selector</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="MenuItemLabelStyle">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#212121</item>
        <item name="android:textSize">12dp</item>
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:background">@drawable/menu_item_background_selector</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="MenuItemContainerStyle">
        <item name="android:paddingBottom">4dp</item>
        <item name="android:background">@drawable/menu_item_background_selector</item>
    </style>
</resources>