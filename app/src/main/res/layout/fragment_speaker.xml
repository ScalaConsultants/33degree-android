<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <ImageView
            android:id="@+id/imageSpeaker"
            android:layout_width="@dimen/width_speaker_photo"
            android:layout_height="@dimen/width_speaker_photo"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:contentDescription="@null"
            android:maxWidth="@dimen/width_speaker_photo"
            android:minHeight="@dimen/width_speaker_photo"
            android:minWidth="@dimen/width_speaker_photo"/>

        <TextView
            android:id="@+id/textBio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textName"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif-light"
            android:lineSpacingMultiplier="1.4"
            android:linksClickable="true"
            android:textColor="@color/primary_text_90"
            android:textColorLink="@color/degree_link"
            android:textIsSelectable="true"
            android:textSize="16dp"
            tools:text="Bio"/>

        <TextView
            android:id="@+id/textName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textBio"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/textBio"
            android:layout_below="@+id/imageSpeaker"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/primary_text_90"
            android:textIsSelectable="true"
            android:textStyle="bold"
            tools:text="Name"/>

        <TextView
            android:id="@+id/textViewTalks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textBio"
            android:layout_marginTop="28dp"
            android:fontFamily="sans-serif"
            android:text="@string/title_talks_list"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/linearLayoutTalks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textViewTalks"
            android:layout_marginTop="8dp"
            android:orientation="vertical">
        </LinearLayout>
    </RelativeLayout>

</ScrollView>