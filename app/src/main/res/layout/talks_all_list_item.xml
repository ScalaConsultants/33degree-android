<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:descendantFocusability="blocksDescendants"
              android:orientation="horizontal"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="4dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingBottom="12dp"
        android:paddingTop="12dp">

        <TextView
            android:id="@+id/textTopic"
            style="@style/talks_topic_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Topic"/>

        <TextView
            android:id="@+id/textSpeakers"
            style="@style/talks_speakers_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Speakers"/>

        <TextView
            android:id="@+id/textTime"
            style="@style/talks_time_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Time"/>

    </LinearLayout>

    <ImageButton
        android:id="@+id/imageButtonNotify"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="-4dp"
        android:contentDescription="@null"
        android:minHeight="48dp"
        android:minWidth="48dp"
        android:padding="0dp"
        android:src="@drawable/ic_action_alarm_add"
        android:tint="@color/primary_text_45"/>

</LinearLayout>