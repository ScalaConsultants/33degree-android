<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Spinner
        android:id="@+id/date_ab_spinner"
        style="@style/DropDownNav.Scalac"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="85dp" />

    <ImageButton
        android:id="@+id/imageButtonScalac"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/action_by_scalac"
        android:onClick="buttonScalacOnClick"
        android:paddingLeft="8dp"
        android:paddingRight="12dp"
        android:src="@drawable/ic_scalac_logo" />

</RelativeLayout>