<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="android:windowContentOverlay">@null</item>-->
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->

        <item name="android:windowBackground">@color/window_background</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:popupTheme">@style/Toolbar_Popup</item>
        <item name="popupTheme">@style/Toolbar_Popup</item>
    </style>

    <style name="Toolbar_Popup" parent="Base.ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColor">@color/primary_text_90</item>
        <item name="android:colorBackground">@android:color/white</item>
    </style>

    <style name="ToolbarTitleStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="talks_topic_style">
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/primary_text_90</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="talks_speakers_style">
        <item name="android:textColor">@color/primary_text_45</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="talks_time_style">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@color/primary_text_45</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ScheduleImageButtonStyle">
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:contentDescription">@null</item>
        <item name="android:src">@drawable/ic_star</item>
        <item name="android:tint">@color/scheduled_not_star_color</item>
    </style>
</resources>