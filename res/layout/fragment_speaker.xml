<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <ImageView
            android:id="@+id/imageSpeaker"
            android:layout_width="@dimen/width_speaker_photo"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:maxWidth="@dimen/width_speaker_photo"
            android:minHeight="@dimen/width_speaker_photo"
            android:minWidth="@dimen/width_speaker_photo"
            android:scaleType="centerCrop"
            android:src="@drawable/th_background" />

        <TextView
            android:id="@+id/textBio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/imageSpeaker"
            android:layout_marginTop="24dp"
            android:lineSpacingMultiplier="1.5"
            android:linksClickable="true"
            android:text="Bio"
            android:textColorLink="@color/degree_link"
            android:textIsSelectable="true" />

        <TextView
            android:id="@+id/textName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageSpeaker"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/imageSpeaker"
            android:text="Name"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textIsSelectable="true"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewTalks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textBio"
            android:layout_marginTop="28dp"
            android:text="@string/title_talks_list"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <LinearLayout
            android:id="@+id/linearLayoutTalks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textViewTalks"
            android:layout_marginTop="8dp"
            android:orientation="vertical" >
        </LinearLayout>
    </RelativeLayout>

</ScrollView>